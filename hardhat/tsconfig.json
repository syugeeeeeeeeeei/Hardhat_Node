{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist-ts", // ts-node が使用する一時的な出力ディレクトリ
    "rootDir": "./",
    "resolveJsonModule": true
  },
  "include": [
    "./commands/**/*.ts",
    "./projects/**/*.ts",
    "./test/**/*.ts"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
}